    - objectDefinition:
        apiVersion: policies.ibm.com/v1alpha1
        kind: SecretEncryptionPolicy # Kubernetes secrets encryption
        metadata:
          name: secret-encryption-policy-example
          namespace: kube-system
          label:
            category: "System-Integrity"
        spec:
          # include are the namespaces you want to watch certificates in, while exclude are the namespaces you explicitly do not want to watch
          namespaceSelector:
            include: ["default", "kube-*"]
          # Can be enforce or inform
          remediationAction: inform
          # Indicates whether the secret encryption is enabled
          secretEncryptionEnabled: true
          # Indicates the encryption mechanism. ICP supports two: aescbc and kms
          encryptionMechanism: kms
          severity: low
