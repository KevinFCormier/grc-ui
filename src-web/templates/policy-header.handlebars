apiVersion: policy.mcm.ibm.com/v1alpha1
kind: Policy
metadata:
  name: {{name}}
  namespace: {{namespace}}
  annotations:
    {{#each annotations}}
    policy.mcm.ibm.com/{{name}}: {{#each values}}{{ this }}{{^if @last}}, {{/if}}{{/each}}
    {{/each}}
spec:
  complianceType: musthave
  remediationAction: {{#if enforce}}enforce{{else}}inform{{/if}}
  namespaces:
    exclude: ["kube-*"]
    include: ["default"]
