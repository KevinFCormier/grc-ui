---
apiVersion: mcm.ibm.com/v1alpha1
kind: PlacementBinding
metadata:
  name: binding-{{name}}
  namespace: {{namespace}}
placementRef:
  name: placement-{{name}}
  kind: PlacementPolicy
  apiGroup: mcm.ibm.com
subjects:
- name: {{name}}
  kind: Policy
  apiGroup: policy.mcm.ibm.com
---
apiVersion: mcm.ibm.com/v1alpha1
kind: PlacementPolicy
metadata:
  name: placement-{{name}}
  namespace: {{namespace}}
spec:
  clusterLabels:
    matchLabels:
      {{#each bindings}}
      {{#each values}}
      {{{ this }}}
      {{/each}}
      {{/each}}
